<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context="com.example.admin.dreammediatechapp.UI.InformationPage.UserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_banner"
        android:orientation="horizontal"
        android:background="@color/white"

        >

        <com.example.admin.dreammediatechapp.common.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/user_info_image"
            android:src="@mipmap/adtest3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/user_info_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="吴彦祖"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/user_info_char"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="代理商"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon32_wx_logo" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wx_account"
                    android:text="@string/wx_account"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_info_nicname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:text="昵称:"
            android:textSize="@dimen/video_list_title" />


        <EditText
            android:id="@+id/user_info_nicname_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_info_realname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:text="真实姓名:"
            android:textSize="@dimen/video_list_title" />


        <EditText
            android:id="@+id/user_info_realname_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/user_info_phone"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:text="手机号码:"
        android:textSize="@dimen/video_list_title" />


    <EditText
        android:id="@+id/user_info_phone_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:singleLine="true" />
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
        android:padding="3dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/user_info_alipay"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:text="支付宝账号:"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/user_info_alipay_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:singleLine="true" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_cautious"
        android:gravity="right"
        android:textColor="@color/red"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="@dimen/video_list_title"
        android:text="保存"
        android:id="@+id/user_info_buttom"
        android:background="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        />
</LinearLayout>
