<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="4dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/video_list_cover"
        android:layout_width="142dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/video_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="BLACK Audiojkafjkldsh;fhdsa;lhfljsdhjfdshjfhs;dakjlfsadj;fh;sjadhfj;sdh;jfhsadjf;hjsadflksadjlf"
        android:textSize="@dimen/video_list_title"
        app:layout_constraintStart_toEndOf="@+id/video_list_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/video_list_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="视频拥有者"
        app:layout_constraintStart_toEndOf="@+id/video_list_cover"
        app:layout_constraintTop_toBottomOf="@+id/video_list_title" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_list_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="分类一·分类二" />

        <TextView
            android:id="@+id/video_list_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="阅读量:10086" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
